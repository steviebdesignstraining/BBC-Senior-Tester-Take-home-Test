# .env.example - Template for environment variables
# This file shows the required environment variables without sensitive values
# Copy this to .env and fill in the appropriate values

# API Configuration
BASE_URL=https://petstore.swagger.io/v2
TIMEOUT=30000
AUTH_KEY="REPLACE_WITH_TEST_KEY_OR_REMOVE_IF_NOT_NEEDED"
API_VERSION=v2

# Test Data - these will be dynamically populated during test runs
PET_ID=
ORDER_ID=
USER_ID=
USERNAME=

# Test Data Schema Reference
TEST_DATA_SCHEMA=schemas/testData.schema.json

# API Response Data (will be populated dynamically during tests)
LAST_CREATED_PET_ID=
LAST_CREATED_ORDER_ID=
LAST_CREATED_USER_ID=

# Test Configuration
MAX_RETRIES=3
RETRY_DELAY=1000
DEBUG_MODE=false

# API Endpoints
PET_ENDPOINT=/pet
STORE_ENDPOINT=/store
USER_ENDPOINT=/user

# Fallback Test Data (used only if dynamic generation fails)
TEST_USERNAME=testuser
TEST_PASSWORD=testpass123
TEST_PET_NAME=TestPet
TEST_PET_STATUS=available
TEST_ORDER_QUANTITY=1
TEST_ORDER_STATUS=placed
TEST_USER_FIRSTNAME=Test
TEST_USER_LASTNAME=User
TEST_USER_EMAIL=test@example.com
TEST_USER_PHONE=1234567890
TEST_USER_STATUS=1