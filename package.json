{
  "name": "bbc-senior-tester-take-home-test",
  "version": "1.0.0",
  "description": "BBC Senior Tester Take-home Test",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:reporter": "playwright test --reporter=line",
    "test:report": "playwright show-report playwright-report",
    "lint": "echo 'No linting configured'",
    "typecheck": "tsc --noEmit",
    "pretest": "npm run typecheck",
    "perf:load": "k6 run k6/load.test.js --summary-export k6/results/load-summary.json",
    "perf:stress": "k6 run k6/stress.test.js --summary-export k6/results/stress-summary.json",
    "perf:security": "k6 run k6/security.test.js --summary-export k6/results/security-summary.json",
    "perf:performance": "k6 run k6/performance.test.js --summary-export k6/results/performance-summary.json",
    "perf:all": "npm run perf:load && npm run perf:stress && npm run perf:security && npm run perf:performance",
    "perf:generate-reports": "node scripts/generate-k6-reports.js",
    "test:ortoni": "node generate-ortoni-report.js",
    "test:ortoni:launch": "node generate-ortoni-report.js",
    "test:full:ortoni": "npm run test && npm run test:ortoni:launch",
    "ci:run": "npm run test && npm run perf:all && npm run perf:generate-reports && npm run update-dashboard",
    "update-dashboard": "node scripts/update-index.js",
    "dashboard": "node scripts/update-index.js && open site/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^17.2.3",
    "ortoni-report": "^4.0.2"
  }
}
