{
  "name": "BBC-Senior-Tester-Take-home-Test",
  "version": "1.0.0",
  "description": "Technical assessment for BBC Senior/Principle Test Engineer position",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:api": "playwright test tests/api.spec.ts",
    "test:integration": "playwright test tests/integration.spec.ts",
    "test:report": "playwright test --reporter=html",
    "test:load": "k6 run k6/load.test.js",
    "test:stress": "k6 run k6/stress.test.js",
    "test:performance": "k6 run k6/performance.test.js",
    "test:security": "k6 run k6/security.test.js",
    "generate-report": "node scripts/generate-report.js",
    "update-dashboard": "node scripts/update-index.js",
    "fetch-github-data": "node scripts/fetch-github-data.js",
    "extract-k6-stats": "node scripts/extract-k6-stats.js",
    "ensure-k6-data": "node scripts/ensure-k6-data.js",
    "setup": "npm install && npx playwright install",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "testing",
    "playwright",
    "k6",
    "api-testing",
    "performance-testing",
    "automation"
  ],
  "author": "Stephen Bennett",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0",
    "ortoni-report": "^4.0.2",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "fs-extra": "^11.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
